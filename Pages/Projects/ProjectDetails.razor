@page "/projects/{ProjectId:int}"
@inject BugTracker.Services.IProjectService ProjectService
@inject NavigationManager Navigation

<h3>Project Details</h3>

@if (project == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h4>@project.Name</h4>
    <p>@project.Description</p>

    <h5>Tickets</h5>

    <button class="btn btn-primary mb-3" @onclick="CreateNewTicket">New Ticket</button>

    @if (project.Tickets == null || !project.Tickets.Any())
    {
        <p>No tickets for this project yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Assigned To</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in project.Tickets)
                {
                    <tr>
                        <td>@ticket.Title</td>
                        <td>@ticket.Priority</td>
                        <td>@ticket.Status</td>
                        <td>@(ticket.AssignedUser?.UserName ?? "Unassigned")</td>
                        <td>@ticket.CreatedAt.ToShortDateString()</td>
                        <td>
                            <button class="btn btn-sm btn-info me-2" @onclick="() => ViewTicket(ticket.Id)">Details</button>
                            <button class="btn btn-sm btn-warning me-2" @onclick="() => EditTicket(ticket.Id)">Edit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    [Parameter]
    public int ProjectId { get; set; }

    private BugTracker.Models.Project? project;

    protected override async Task OnInitializedAsync()
    {
        project = await ProjectService.GetByIdAsync(ProjectId);
        if (project == null)
        {
            Navigation.NavigateTo("/projects");
        }
    }

    void CreateNewTicket()
    {
        Navigation.NavigateTo($"/tickets/new?projectId={ProjectId}");
    }

    void ViewTicket(int ticketId)
    {
        Navigation.NavigateTo($"/tickets/{ticketId}");
    }

    void EditTicket(int ticketId)
    {
        Navigation.NavigateTo($"/tickets/edit/{ticketId}");
    }
}
